<view class='content'>
 <view class='title'>

    <text>{{catagory}}</text>
  </view>
  <view class='head'>
    <view>搜索：</view>
    <view class='value'>
      <input type='text' placeholder='请输入关键词' placeholder-class='holder' name='keyword' bindinput="getInput" ></input>
      <view class='line' ></view>
    </view>
    <image src='../../../images/home/search_1.png' bindtap='search'></image>
  </view>
  
  <view wx:if="{{noItem===false}}" class='hr'>
    <view wx:for="{{items}}" data-index="{{index}}" bindtap='toItem' class='item'>
      <view class='img'>
        <image src='{{item.Image}}'></image>
      </view>
      <view class='productInfo' >
        <view class='productInfo_titleandprice'>
          <text class="prdtitle">名称：{{item.Title}}</text>
          <text class="price">￥{{item.Price}}</text>
        </view>
        <text class='discribe'>描述：{{item.Detail}}</text>
      </view>      
    </view>
  </view>
  <view wx:elif="{{noItem===true}}">
    <text>还没有商品哦！</text>
  </view>
  <view wx:else></view>
</view>